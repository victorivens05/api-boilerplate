{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "esnext",
		"inlineSourceMap": true,
		"allowJs": true,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}

